{
  "tool": {
    "name": "search-contacts",
    "description": "Search for contacts in the CRM by name, email, phone, or company. Returns a list of matching contacts with their details.",
    "type": "webhook",
    "endpoint": "${BASE_URL}/api/convex/search/contacts",
    "request_schema": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "The search query (name, email, phone, or company to search for)"
        },
        "limit": {
          "type": "integer",
          "description": "Maximum number of results to return (default: 10)",
          "default": 10
        }
      },
      "required": ["query"]
    },
    "response_schema": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean",
          "description": "Whether the search was successful"
        },
        "results": {
          "type": "array",
          "description": "Array of matching contacts",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "email": { "type": "string" },
              "phone": { "type": "string" },
              "title": { "type": "string" },
              "company": { "type": "string" }
            }
          }
        },
        "count": {
          "type": "integer",
          "description": "Total number of matches found"
        }
      }
    }
  }
}
